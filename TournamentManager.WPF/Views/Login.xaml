<UserControl x:Class="TournamentManager.WPF.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:TournamentManager.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2.4*"/>
            <RowDefinition Height="2.6*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="3" FontSize="35" 
               HorizontalAlignment="Center" VerticalAlignment="Center" Content="Tournament Manager"/>

        <DockPanel Grid.Column="1" Grid.Row="1" >
            <Label DockPanel.Dock="Top" Content="Sign In With User Name"/>

            <TextBox Margin="0,0,0,15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                     FontSize="16" Background="#FF464143" Text="{Binding UserName}"/>
        </DockPanel>

        <DockPanel Grid.Column="1" Grid.Row="2">
            <Label DockPanel.Dock="Top" Content="Password"/>

            <TextBox Margin="0,0,0,15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center"
                     FontSize="16" Background="#FF464143" Text="{Binding Password}"/>
        </DockPanel>

        <Button  Grid.Column="1" Grid.Row="3" Margin="50,25,50,10" Content="Sign In" Background="#FF0664E2" Command="{Binding SignInCommand}"/>

        <DockPanel Grid.Column="1" Grid.Row="4" LastChildFill="True" >
            <Label DockPanel.Dock="Top" FontSize ="12" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Don't have a account?"/>

            <TextBlock Text="Create Account" TextDecorations="Underline" FontSize="20"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0,0,0,20">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="White" />

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF0664E2" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding ChangeViewCommand}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBlock>
        </DockPanel>
    </Grid>
</UserControl>
