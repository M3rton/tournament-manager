<UserControl x:Class="TournamentManager.WPF.Views.MyTeam"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TournamentManager.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Style="{x:Null}" Foreground="White" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} - {1}">
                    <Binding Path="Team.Name"/>
                    <Binding Path="Team.Tag"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Team.Players}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="6" BorderBrush="Gray" BorderThickness="2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontSize="20" Margin="30"/>
                            <TextBlock Text="{Binding MainRole}" FontSize="20" Margin="30"/>
                            <TextBlock Text="{Binding SecondaryRole}" FontSize="20" Margin="30"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox MinWidth="100" Background="#FF464143" Margin="20,20,10,20" FontSize="20" Text="{Binding PlayerName}" />
                <Button Margin="10,20,20,20" Padding="10,0" FontSize="15" Content="Add Player" Background="#FF0664E2" Command="{Binding AddPlayerCommand}"/>
            </StackPanel>

            <Button Grid.Column="1" Margin="150,20" Content="Leave Team" FontSize="15" Background="#FF0664E2"/>
        </Grid>
    </Grid>
</UserControl>
